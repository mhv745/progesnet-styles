{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-standard-scss",
        "stylelint-config-prettier-scss"
    ],
    "plugins": ["stylelint-scss"],
    "rules": {
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": null
    },
    "overrides": [
      {
        "files": ["**/*.scss"],
        "customSyntax": "postcss-scss"
      }
    ]
}